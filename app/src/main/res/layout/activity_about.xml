<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.titter.past3.titter.About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tet"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/rg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All rights reserved"
            android:textColor="#fff"
            android:layout_marginTop="120dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/black_overlay"
            android:backgroundTint="@color/black_overlay"
            android:text="2016 Titter Inc"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true"
           android:layout_below="@+id/imageView2"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/team"
            android:layout_below="@+id/textView2"
            android:text="Team"
            android:textColor="#fff"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felix Ekenjoku CEO"

            android:layout_alignTop="@+id/team"
            android:layout_alignEnd="@+id/fullscreen_content"
            android:layout_marginTop="31dp"
            android:visibility="gone"
            android:id="@+id/ceo"
            android:textColor="#fff"/>
    </RelativeLayout>
</FrameLayout>
